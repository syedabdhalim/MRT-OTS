//This is done to test
@{
    ViewBag.Title = "Home Page";

    if (ViewBag.Roles == "User")
    {
        Layout = "~/Views/Shared/_Layout2.cshtml";
    }

    else if (ViewBag.Roles == "Admin")
    {
        Layout = "~/Views/Shared/_Layout3.cshtml";
    }

    else if (ViewBag.Roles == null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<section id="content-1">
    <div class="container">
        <div class="title3" style="padding-top: 30px;">Hi Hello World Mass Rapid Transit</div>
        <p class="lead">Mass Rapid Transit, better known with its acronym "MRT") is a planned 3-line mass rapid transit system in the Greater Kuala Lumpur conurbation in Malaysia. It envisages a "wheel and spoke" concept comprising two northwest-southeast radial lines and one circle line looping around Kuala Lumpur.</p>
        <p><a href="https://www.mymrt.com.my/" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
    </div>
</section>

